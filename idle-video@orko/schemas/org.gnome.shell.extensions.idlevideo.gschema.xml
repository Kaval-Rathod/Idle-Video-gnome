<schemalist>
  <schema id="org.gnome.shell.extensions.idlevideo" path="/org/gnome/shell/extensions/idlevideo/">
    <key name="video-path" type="s">
      <default>''</default>
      <summary>Video file path</summary>
      <description>Full path to the video file to play when idle</description>
    </key>

    <key name="idle-seconds" type="i">
      <range min="5" max="3600"/>
      <default>30</default>
      <summary>Idle threshold in seconds</summary>
      <description>Number of seconds of inactivity before video starts playing</description>
    </key>

    <key name="mute" type="b">
      <default>false</default>
      <summary>Mute audio</summary>
      <description>Play video without sound</description>
    </key>
  </schema>
</schemalist>
