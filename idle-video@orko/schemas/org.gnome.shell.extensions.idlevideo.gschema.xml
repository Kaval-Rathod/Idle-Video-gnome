<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.idlevideo" path="/org/gnome/shell/extensions/idlevideo/">
    <key name="video-path" type="s">
      <default>''</default>
      <summary>Full path to the video file</summary>
    </key>

    <key name="idle-seconds" type="i">
      <default>30</default>
      <summary>Idle threshold in seconds</summary>
    </key>

    <key name="mute" type="b">
      <default>false</default>
      <summary>Play video muted?</summary>
    </key>
  </schema>
</schemalist>
